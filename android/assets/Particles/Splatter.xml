<Effect xmlns:meta="Editor">
	<Loop>false</Loop>
	<Emitters>
		<Emitter>
			<Name>Splatter</Name>
			<Shape>Cone</Shape>
			<Width>45</Width>
			<Height>0.1</Height>
			<ParticleSpeed>2,3</ParticleSpeed>
			<ParticleRotation>0,1</ParticleRotation>
			<Gravity>-10</Gravity>
			<RateKeyframes>
				<Keyframe>0|10</Keyframe>
			</RateKeyframes>
			<SingleBurst>true</SingleBurst>
			<Particles>
				<Particle>
					<Lifetime>0.25,0.7</Lifetime>
					<BlendMode>Multiplicative</BlendMode>
					<Collision>Slide</Collision>
					<VelocityAligned>true</VelocityAligned>
					<TextureKeyframes>
						<Stream>
							<Keyframe>0|Particle/droplet</Keyframe>
						</Stream>
					</TextureKeyframes>
					<SizeKeyframes>
						<Stream>
							<Keyframe>0|0.3|0.5</Keyframe>
						</Stream>
					</SizeKeyframes>
					<ColourKeyframes>
						<Stream>
							<Keyframe>0|255,255,255,255</Keyframe>
						</Stream>
					</ColourKeyframes>
					<AlphaKeyframes>
						<Stream>
							<Keyframe>0|1</Keyframe>
							<Keyframe>0.9|1</Keyframe>
							<Keyframe>1|0</Keyframe>
						</Stream>
					</AlphaKeyframes>
				</Particle>
			</Particles>
		</Emitter>
	</Emitters>
</Effect>